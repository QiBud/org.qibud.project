# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                               controllers.Application.index()

GET     /buds                                           controllers.Buds.buds
GET     /bud/:identity/new                              controllers.Buds.budCreateForm(identity: String)
POST    /bud/:identity/create                           controllers.Buds.saveNewBud(identity: String)
# GET     /buds/:module
# GET     /buds/:module/:role

# tous les roles du bud rajoutent de la vue à la vue de base
GET     /bud/:identity                                  controllers.Buds.bud(identity: String)
# bud attachments
GET     /bud/:identity/attachment/:attachment_id        controllers.Buds.attachment(identity: String, attachment_id: String)
GET     /bud/:identity/attachment/:attachment_id/meta   controllers.Buds.attachmentMetadata(identity: String, attachment_id: String)
# tous les roles du bud rajoutent du formulaire
GET     /bud/:identity/edit                             controllers.Buds.budEditForm(identity: String)
# tous les roles du bud rajoutent de la validation, du "comportement BudStore"
POST    /bud/:identity                                  controllers.Buds.saveBud(identity: String)
# tous les roles du bud rajoutent de la validation, du "comportement BudStore"
GET     /bud/:identity/delete                           controllers.Buds.deleteBud(identity: String)

# seul le role pointé rajoute de la vue à la vue de base
GET     /bud/:identity/:pack/:role                      controllers.Buds.budByRole(identity: String, pack: String, role: String)
# seul le role pointé rajoute du formulaire
GET     /bud/:identity/:pack/:role/edit                 controllers.Buds.budEditFormByRole(identity: String, pack: String, role: String)
# seul le role pointé rajoute de la validation, du "comportement BudStore"
POST    /bud/:identity/:pack/:role                      controllers.Buds.saveBudByRole(identity: String, pack: String, role: String)
# seul le role pointé rajoute de la validation, du "comportement BudStore"
GET     /bud/:identity/:pack/:role/delete               controllers.Buds.deleteBudByRole(identity: String, pack: String, role: String)
GET     /bud/:identity/:pack/:role/:action/form         controllers.Buds.roleActionForm(identity: String, pack: String, role: String, action: String)
POST    /bud/:identity/:pack/:role/:action              controllers.Buds.invokeRoleAction(identity: String, pack: String, role: String, action: String)

GET     /packs                                          controllers.BudPacks.packs
GET     /pack/:pack                                     controllers.BudPacks.pack(pack: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                   controllers.Assets.at(path="/public", file)
